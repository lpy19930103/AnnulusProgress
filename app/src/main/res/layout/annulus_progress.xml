<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <com.lipy.annulusprogress.CircleTextProgressbar
                android:id="@+id/tv_red_progress_text2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:textSize="30sp"
                android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:id="@+id/result_ll"
                  android:visibility="gone"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

        <ImageView android:layout_width="46dp"
                   android:id="@+id/result_success"
                   android:background="@mipmap/duigou"
                   android:layout_height="32dp"/>

        <ImageView android:layout_width="36dp"
                   android:visibility="gone"
                   android:id="@+id/result_error"
                   android:background="@mipmap/cha"
                   android:layout_height="36dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="生成成功"
                  android:id="@+id/result_tv"
                  android:textSize="14sp"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/text_gray"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>